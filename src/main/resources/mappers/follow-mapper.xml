<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Follow">

	<resultMap type="Follow" id="resultFollow">
		<id property="followNum" column="POST_NUM"/>
		<result property="id" column="ID"/>
		<result property="followId" column="FOLLOW_ID"/>
		<result property="followDate" column="FOLLOW_DATE"/>
	</resultMap>
	
	<!-- follow 한 사람 조회 -->
	<select id="getFollow" parameterType="Post" resultType="Follow">
		SELECT * FROM FOLLOW
		WHERE ID = #{id}
	</select>
</mapper>
